<%= form_with(model: item, class: "w-full max-w-md p-4 bg-white rounded shadow-md") do |form| %>
  <% if item.errors.any? %>
    <div class="text-red-500">
      <h2 class="mb-2"><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
